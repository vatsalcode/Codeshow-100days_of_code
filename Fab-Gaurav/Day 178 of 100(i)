#include <bits/stdc++>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int n,s=1;
        cin>>n;
        long int a[n];
        for(int i=0;i<n;i++){
            cin>>a[i];            
        } 
        cout<<a[0];
        for(int i=1;i<n;i++){
            if(a[i]-a[i-1]==1){
                s++;
                if(i==n-1){
                    if(s>2){
                        cout<<"..."<<a[i];
                    }
                    else{
                        cout<<","<<a[i];
                    }
                }
            }
            else{
                if(s>2){
                    cout<<"..."<<a[i-1]<<","<<a[i];
                    s=1;
                }
                else if(s==1){
                    cout<<","<<a[i];
                }
                else{
                    cout<<","<<a[i-1]<<","<<a[i];
                    s=1;
                }
            }
        }
       cout<<endl; 
    }
	return 0;
}
